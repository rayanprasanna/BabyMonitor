<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="#fff"
    android:layout_height="match_parent">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none"
        tools:ignore="UselessParent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            tools:ignore="ScrollViewSize,UselessParent">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="end"
                android:id="@+id/close_layout"
                android:layout_margin="5dp"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:textColor="#fff"
                    android:text="X"
                    android:id="@+id/close"
                    android:textStyle="bold"
                    android:layout_gravity="end"
                    android:gravity="center"
                    android:textSize="20sp"
                    android:background="@drawable/circle_background"
                    tools:ignore="HardcodedText" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/icon"
                android:layout_below="@id/close_layout"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_margin="40dp"
                tools:ignore="ObsoleteLayoutParam,UselessParent">
                <ImageView
                    android:layout_width="150dp"
                    android:layout_height="150dp"
                    android:src="@drawable/family"
                    android:layout_gravity="center"
                    tools:ignore="ContentDescription" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:id="@+id/name"
                android:layout_below="@+id/icon"
                tools:ignore="ObsoleteLayoutParam">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_name"
                    android:layout_gravity="center"
                    android:layout_margin="2dp"
                    tools:ignore="ContentDescription" />
                <android.support.design.widget.TextInputLayout
                    android:id="@+id/name_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <android.support.design.widget.TextInputEditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="@string/hint_name"
                        android:inputType="text"
                        android:textColorHint="#000"
                        android:id="@+id/name_text"
                        tools:ignore="Autofill,LabelFor,TextFields" />
                </android.support.design.widget.TextInputLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginVertical="20dp"
                android:id="@+id/email"
                android:layout_below="@+id/email"
                tools:ignore="ObsoleteLayoutParam,UnusedAttribute">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_email"
                    android:layout_gravity="center"
                    android:layout_margin="2dp"
                    tools:ignore="ContentDescription" />
                <android.support.design.widget.TextInputLayout
                    android:id="@+id/email_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <android.support.design.widget.TextInputEditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="@string/hint_email"
                        android:inputType="textEmailAddress"
                        android:textColorHint="#000"
                        android:id="@+id/email_text"
                        tools:ignore="Autofill,LabelFor,TextFields" />
                </android.support.design.widget.TextInputLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:id="@+id/password"
                android:layout_below="@+id/icon"
                tools:ignore="ObsoleteLayoutParam">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_password"
                    android:layout_gravity="center"
                    android:layout_margin="2dp"
                    tools:ignore="ContentDescription" />
                <android.support.design.widget.TextInputLayout
                    android:id="@+id/password_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <android.support.design.widget.TextInputEditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="@string/hint_password"
                        android:textColorHint="#000"
                        android:inputType="textPassword"
                        android:id="@+id/password_text"
                        tools:ignore="Autofill,LabelFor,TextFields" />
                </android.support.design.widget.TextInputLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginVertical="20dp"
                android:id="@+id/cinfirm_password"
                android:layout_below="@+id/email"
                tools:ignore="ObsoleteLayoutParam,UnusedAttribute">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_password"
                    android:layout_gravity="center"
                    android:layout_margin="2dp"
                    tools:ignore="ContentDescription" />
                <android.support.design.widget.TextInputLayout
                    android:id="@+id/confirm_password_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <android.support.design.widget.TextInputEditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="@string/hint_confirm_password"
                        android:textColorHint="#000"
                        android:inputType="textPassword"
                        android:id="@+id/confirm_password_text"
                        tools:ignore="Autofill,LabelFor,TextFields" />
                </android.support.design.widget.TextInputLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="20dp"
                android:layout_marginHorizontal="20dp"
                android:id="@+id/register"
                android:layout_below="@id/password"
                tools:ignore="ObsoleteLayoutParam,UnusedAttribute">
                <Button
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/colorAccent"
                    android:textColor="#ffffff"
                    android:text="@string/text_register"
                    android:id="@+id/register_button"
                    tools:ignore="HardcodedText" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="25dp"
                android:layout_marginBottom="25dp"
                android:layout_marginHorizontal="20dp"
                android:id="@+id/login"
                android:gravity="center"
                android:layout_below="@id/login"
                tools:ignore="ObsoleteLayoutParam,UnusedAttribute">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#000"
                    android:textSize="18sp"
                    android:id="@+id/login_text"
                    android:text="@string/text_already_member"
                    tools:ignore="HardcodedText" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</RelativeLayout>